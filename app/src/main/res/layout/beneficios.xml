<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFF8E1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Título -->
        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Beneficios para Clientes"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#4E342E"
            android:paddingBottom="16dp" />

        <!-- Beneficio 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="@drawable/bg_card"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@android:drawable/star_on"
                android:contentDescription="Puntos"
                android:tint="#FF9800"
                android:layout_marginEnd="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Acumula puntos con cada compra y canjéalos por cafés gratis."
                android:textSize="16sp"
                android:textColor="#3E2723" />
        </LinearLayout>

        <!-- Beneficio 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="@drawable/bg_card"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@android:drawable/ic_menu_my_calendar"
                android:contentDescription="Promociones"
                android:tint="#8BC34A"
                android:layout_marginEnd="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Promociones especiales los fines de semana."
                android:textSize="16sp"
                android:textColor="#3E2723" />
        </LinearLayout>

        <!-- Beneficio 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="@drawable/bg_card"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@android:drawable/ic_menu_info_details"
                android:contentDescription="Exclusivo"
                android:tint="#03A9F4"
                android:layout_marginEnd="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Acceso a productos exclusivos para miembros."
                android:textSize="16sp"
                android:textColor="#3E2723" />
        </LinearLayout>

        <!-- Botón volver -->
        <Button
            android:id="@+id/btnVolver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Volver"
            android:textAllCaps="false"
            android:backgroundTint="#6D4C41"
            android:textColor="#FFFFFF"
            android:layout_marginTop="20dp"
            android:padding="12dp" />

    </LinearLayout>
</ScrollView>
