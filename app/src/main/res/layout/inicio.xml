<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutInicio"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/cream_background"
    android:padding="24dp">

    <!-- Vista espaciadora superior (para centrar contenido) -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <!-- Contenedor de bienvenida -->
    <LinearLayout
        android:id="@+id/layoutBienvenida"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@android:color/transparent"
        android:layout_marginBottom="24dp">

        <!-- Texto principal de bienvenida -->
        <TextView
            android:id="@+id/tvBienvenida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="☕ Bienvenido a CaféFidelidad QR ☕"
            android:textSize="28sp"
            android:textColor="@color/coffee_brown_dark"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp"/>
    </LinearLayout>

    <!-- Contenedor del login -->
    <LinearLayout
        android:id="@+id/layoutLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Subtítulo antes del formulario -->
        <TextView
            android:id="@+id/tvSubBienvenida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inicia sesión o crea tu cuenta"
            android:textSize="20sp"
            android:textColor="@color/text_secondary_dark"
            android:layout_marginBottom="16dp"
            android:textStyle="bold"/>

        <!-- Tarjeta que contiene el formulario de login/registro -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            app:cardBackgroundColor="@color/white_card">

            <!-- Contenido de la tarjeta -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Campo de texto: Usuario -->
                <EditText
                    android:id="@+id/etUsuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Usuario"
                    android:inputType="text"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp"
                    android:layout_marginBottom="16dp"/>

                <!-- Campo de texto: Contraseña -->
                <EditText
                    android:id="@+id/etPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Contraseña"
                    android:inputType="textPassword"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp"
                    android:layout_marginBottom="16dp"/>

                <!-- Campo de texto: Confirmar contraseña (solo visible al registrar) -->
                <EditText
                    android:id="@+id/etConfirmarPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Confirmar contraseña"
                    android:inputType="textPassword"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp"
                    android:layout_marginBottom="16dp"
                    android:visibility="gone"/>

                <!-- CheckBox para activar el modo registro -->
                <CheckBox
                    android:id="@+id/cbRegistrar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Crear cuenta nueva"
                    android:textColor="@color/text_primary_dark"
                    android:layout_marginBottom="16dp"/>

                <!-- Botón de acción (iniciar sesión o registrar) -->
                <Button
                    android:id="@+id/btnAccion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Iniciar sesión"
                    android:textColor="@color/text_on_primary_light"
                    android:backgroundTint="@color/coffee_brown_primary"
                    android:padding="12dp"
                    app:cornerRadius="12dp"
                    android:textAllCaps="false"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <!-- Vista espaciadora inferior (para centrar contenido) -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>
