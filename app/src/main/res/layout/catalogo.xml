<?xml version="1.0" encoding="utf-8"?>
<!-- Layout principal con ConstraintLayout, fondo crema y contexto apuntando a CatalogoActivity -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cream_background"
    tools:context=".CatalogoActivity">

    <!-- Botón para volver atrás -->
    <Button
        android:id="@+id/btnVolver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volver"
        android:backgroundTint="@color/coffee_brown_light"
        android:textColor="@color/text_on_primary_light"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Botón de acceso a CRUD (gestión de catálogo) -->
    <Button
        android:id="@+id/btnCatalogoCRUD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/accent_orange"
        android:text="CRUD"
        android:textColor="@color/white_card"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Título principal del catálogo -->
    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="Catálogo de Cafés"
        android:textColor="@color/coffee_brown_dark"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnVolver" />

    <!-- Contenedor con scroll para listar los productos (cafés) -->
    <ScrollView
        android:id="@+id/scrollMain"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitulo"
        app:layout_constraintBottom_toTopOf="@id/bottomNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Contenedor vertical para apilar las tarjetas de café -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Tarjeta de Café Espresso -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <!-- Imagen representativa del café -->
                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/cafe_placeholder"
                        android:contentDescription="Café Espresso"
                        android:scaleType="centerCrop"/>

                    <!-- Información del producto -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">

                        <!-- Nombre del café -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Café Espresso"
                            android:textStyle="bold"
                            android:textSize="18sp"/>

                        <!-- Descripción -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Intenso y fuerte, ideal para amantes del café puro."
                            android:textColor="#8D6E63"
                            android:layout_marginTop="4dp"/>

                        <!-- Precio -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$1.500"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:layout_marginTop="6dp"/>

                        <!-- Valoración con estrellas -->
                        <RatingBar
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:numStars="5"
                            android:rating="4.5"
                            android:stepSize="0.5"
                            android:layout_marginTop="4dp"/>

                        <!-- Botón para agregar al carrito -->
                        <Button
                            android:id="@+id/btnAddEspresso"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Agregar al carrito"
                            android:backgroundTint="@color/coffee_brown_primary"
                            android:textColor="@color/text_on_primary_light"
                            android:layout_marginTop="6dp"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Tarjeta de Café Latte -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <!-- Imagen representativa -->
                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/cafe_placeholder"
                        android:contentDescription="Café Latte"
                        android:scaleType="centerCrop"/>

                    <!-- Información del café -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">

                        <!-- Nombre -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Café Latte"
                            android:textStyle="bold"
                            android:textSize="18sp"/>

                        <!-- Descripción -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Suave y cremoso, con el equilibrio perfecto de leche y café."
                            android:textColor="#8D6E63"
                            android:layout_marginTop="4dp"/>

                        <!-- Precio -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$2.000"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:layout_marginTop="6dp"/>

                        <!-- Valoración -->
                        <RatingBar
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:numStars="5"
                            android:rating="4.0"
                            android:stepSize="0.5"
                            android:layout_marginTop="4dp"/>

                        <!-- Botón agregar -->
                        <Button
                            android:id="@+id/btnAddLatte"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Agregar al carrito"
                            android:backgroundTint="@color/coffee_brown_primary"
                            android:textColor="@color/text_on_primary_light"
                            android:layout_marginTop="6dp"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Tarjeta de Cappuccino -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <!-- Imagen representativa -->
                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/cafe_placeholder"
                        android:contentDescription="Cappuccino"
                        android:scaleType="centerCrop"/>

                    <!-- Información del café -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">

                        <!-- Nombre -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cappuccino"
                            android:textStyle="bold"
                            android:textSize="18sp"/>

                        <!-- Descripción -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Espuma cremosa y sabor equilibrado, un clásico italiano."
                            android:textColor="#8D6E63"
                            android:layout_marginTop="4dp"/>

                        <!-- Precio -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$2.200"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:layout_marginTop="6dp"/>

                        <!-- Valoración -->
                        <RatingBar
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:numStars="5"
                            android:rating="4.7"
                            android:stepSize="0.5"
                            android:layout_marginTop="4dp"/>

                        <!-- Botón agregar -->
                        <Button
                            android:id="@+id/btnAddCappuccino"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Agregar al carrito"
                            android:backgroundTint="@color/coffee_brown_primary"
                            android:textColor="@color/text_on_primary_light"
                            android:layout_marginTop="6dp"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

    <!-- Barra de navegación inferior -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="@color/white_card"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:weightSum="3"
        android:elevation="8dp">

        <!-- Opción de navegación: Coffee -->
        <LinearLayout
            android:id="@+id/navCoffee"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_compass"
                android:contentDescription="Coffee" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coffee"
                android:textColor="@color/coffee_brown_primary"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Opción de navegación: QR -->
        <LinearLayout
            android:id="@+id/navQR"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_camera"
                android:contentDescription="QR" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QR"
                android:textColor="@color/coffee_brown_primary"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Opción de navegación: User -->
        <LinearLayout
            android:id="@+id/navUser"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_myplaces"
                android:contentDescription="User" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User"
                android:textColor="@color/coffee_brown_primary"
                android:textStyle="bold"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
