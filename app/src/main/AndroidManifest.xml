<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplicationsss">

        <!-- Actividad de Inicio -->
        <activity
            android:name=".Inicio"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Actividad principal -->
        <activity
            android:name=".MainActivity"
            android:exported="true" />

        <!-- Actividad de Usuario -->
        <activity
            android:name=".UsuarioActivity"
            android:exported="true" />

        <!-- CRUD de Usuario -->
        <activity
            android:name=".UsuarioCrudActivity"
            android:exported="true" />

        <!-- Actividad de Catálogo -->
        <activity
            android:name=".CatalogoActivity"
            android:exported="true" />

        <!-- CRUD de Catálogo -->
        <activity
            android:name=".CatalogoCrudActivity"
            android:exported="true" />

        <!-- Actividad de QR -->
        <activity
            android:name=".QRActivity"
            android:exported="true" />

        <activity android:name=".ReglasActivity" />

    </application>

</manifest>
